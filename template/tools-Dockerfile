FROM alpine:latest

ENV USER_ID=1001

# PHP, git and deps
RUN apk add curl php-cli php-mbstring php-json php-openssl php-phar php-xml php-dom php-xmlwriter php-tokenizer git unzip

# Composer
RUN curl -sS https://getcomposer.org/installer -o composer-setup.php && \
    php composer-setup.php --install-dir=/usr/local/bin --filename=composer

# NPM/node
RUN apk add --update nodejs nodejs-npm

# Create user
RUN adduser -u 1001 -g 33 toolsuser --disabled-password

# Create workdir
RUN mkdir project && \
    chown -R toolsuser:33 project

USER toolsuser

WORKDIR /project